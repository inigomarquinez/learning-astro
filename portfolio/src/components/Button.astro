<button
  class="alertButton inline-block mt-4 px-6 py-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-md shadow-md text-sm font-bold text-white"
  ><slot /></button
>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".alertButton");

    buttons.forEach(function (button) {
      button.addEventListener("click", function () {
        alert("This is a demo content!");
      });
    });
  });
</script>
