---
import Layout from "../layouts/layout.astro";

const Card = "div";
const Content = "div";
---

<Layout title="Home page">
  <div class="absolute w-full min-h-screen">
    <div
      class="absolute z-0 top-0 w-full h-1/2 bg-cover bg-bottom pt-20 px-12 bg-gradient-to-r from-purple-500 to-pink-500"
    >
    </div>
  </div>

  <Card
    class="relative z-10 flex min-h-screen h-auto justify-center items-center"
  >
    <Content
      class="relative z-20 bg-white md:flex p-12 shadow-lg rounded-lg w-full max-w-4xl"
    >
      <div class="sm:flex flex-col py-1 md:pr-10">
        <h2 class="text-lg mb-3">Hello, I am</h2>
        <h1 class="text-5xl font-bold text-gray-800 mb-6">Íñigo Marquínez</h1>
        <p class="text-xl">
          Full-stack web developer who crafts great websites.
        </p>
      </div>
      <img
        src="images/user.jpeg"
        alt="image"
        class="flex-shrink-0 w-80 rounded-full border-6 border-white shadow-md"
      />
    </Content>
  </Card>
</Layout>
